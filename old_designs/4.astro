---
/**
 * VERSION 4: SIGNAL / NOISE
 * ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ‚îÄ
 * Deconstructed mission-control aesthetic. Near-black canvas (#030304)
 * with phosphor green (#39FF14) signal accents and amber data streams.
 * Content organized as telemetry panels and readout cards.
 * Think: deep space exploration HQ meets cycling data visualization.
 * Typography: Space Grotesk headers, JetBrains Mono data, crisp DM Sans body.
 * Motion: Pulsing signals, scanning horizontal lines, data cascade reveals.
 * NOT a terminal ‚Äî this is mission control for a human challenge.
 */
import BaseLayout from './layouts/BaseLayout.astro';
import Navigation from './components/Navigation.astro';
import Footer from './components/Footer.astro';
import Countdown from './components/Countdown.tsx';
import DesignSelector from './components/DesignSelector.astro';
---

<BaseLayout title="The Slow Road Back | Riding4GBS">
  <Navigation />
  <DesignSelector />

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500;700&display=swap');

    .font-signal { font-family: 'Space Grotesk', sans-serif; }
    .font-mono-data { font-family: 'JetBrains Mono', monospace; }
    .bg-void { background-color: var(--sig-void); }
    .bg-void-light { background-color: var(--sig-void-alt); }
    .text-signal { color: var(--sig-green); }
    .text-signal-dim { color: var(--sig-green-dim); }
    .border-signal { border-color: var(--sig-green-border); }
    .bg-signal { background-color: var(--sig-green); }
    .text-data { color: var(--sig-amber); }

    /* Scan line effect */
    .scan-line::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 2px;
      background: linear-gradient(90deg, transparent, var(--sig-green), transparent);
      animation: scan 4s ease-in-out infinite;
      opacity: 0.4;
    }
    @keyframes scan {
      0%, 100% { top: 0; opacity: 0; }
      10% { opacity: 0.4; }
      90% { opacity: 0.4; }
      100% { top: 100%; opacity: 0; }
    }

    /* Data pulse */
    @keyframes dataPulse {
      0%, 100% { opacity: 0.3; }
      50% { opacity: 1; }
    }
    .data-pulse { animation: dataPulse 2s ease-in-out infinite; }

    /* Grid overlay */
    .grid-overlay {
      background-image:
        linear-gradient(var(--sig-green-bg-subtle) 1px, transparent 1px),
        linear-gradient(90deg, var(--sig-green-bg-subtle) 1px, transparent 1px);
      background-size: 60px 60px;
    }

    /* Signal dot */
    @keyframes signalBlink {
      0%, 70%, 100% { opacity: 1; }
      35% { opacity: 0.2; }
    }
    .signal-dot {
      width: 6px; height: 6px;
      background: var(--sig-green);
      border-radius: 50%;
      box-shadow: 0 0 8px var(--sig-green), 0 0 20px var(--sig-green-dim);
      animation: signalBlink 2s ease-in-out infinite;
    }

    /* Horizontal data stream */
    @keyframes dataStream {
      from { transform: translateX(-100%); }
      to { transform: translateX(100vw); }
    }
    .data-stream {
      position: absolute;
      height: 1px;
      width: 200px;
      background: linear-gradient(90deg, transparent, var(--sig-green), transparent);
      animation: dataStream 8s linear infinite;
    }

    /* Panel glow on hover */
    .panel-glow {
      transition: all 0.4s cubic-bezier(0.22, 1, 0.36, 1);
    }
    .panel-glow:hover {
      box-shadow: 0 0 30px var(--sig-green-bg), inset 0 0 30px var(--sig-green-bg-subtle);
      border-color: var(--sig-green-border-md);
    }

    /* Stagger animations for this page */
    .v4-reveal {
      animation: v4FadeUp 0.6s cubic-bezier(0.22, 1, 0.36, 1) both;
    }
    @keyframes v4FadeUp {
      from { opacity: 0; transform: translateY(20px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .v4-d1 { animation-delay: 0.1s; }
    .v4-d2 { animation-delay: 0.2s; }
    .v4-d3 { animation-delay: 0.35s; }
    .v4-d4 { animation-delay: 0.5s; }
    .v4-d5 { animation-delay: 0.65s; }
    .v4-d6 { animation-delay: 0.8s; }

    /* Horizontal rule with data */
    .data-divider {
      height: 1px;
      background: linear-gradient(90deg, transparent, var(--sig-green-border), var(--sig-green-border-md), var(--sig-green-border), transparent);
    }
  </style>

  <style is:global>
    /* ‚îÄ‚îÄ‚îÄ Signal Variant Light Mode: Tailwind Utility Overrides ‚îÄ‚îÄ‚îÄ */

    /* Primary text (headings, etc.) */
    html.variant-signal[data-theme="light"] .text-white {
