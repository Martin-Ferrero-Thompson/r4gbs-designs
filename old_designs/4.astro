    /* Dark backgrounds */
    html.variant-signal[data-theme="light"] .bg-\[\#030304\]\/40 {
      background-color: rgba(247, 248, 249, 0.85) !important;
    }
    html.variant-signal[data-theme="light"] .bg-\[\#030304\]\/60 {
      background-color: rgba(247, 248, 249, 0.9) !important;
    }
    html.variant-signal[data-theme="light"] .bg-\[\#050505\]\/40,
    html.variant-signal[data-theme="light"] .bg-\[\#050505\]\/95 {
      background-color: rgba(255, 255, 255, 0.95) !important;
    }
    html.variant-signal[data-theme="light"] .bg-\[\#111\] {
      background-color: var(--sig-rule-bg) !important;
    }
    html.variant-signal[data-theme="light"] .bg-\[\#0a0b0a\] {
      background-color: var(--sig-void-alt) !important;
    }

    /* Borders */
    html.variant-signal[data-theme="light"] .border-\[\#39FF14\]\/10 {
      border-color: var(--sig-green-border) !important;
    }
    html.variant-signal[data-theme="light"] .border-\[\#39FF14\]\/15 {
      border-color: var(--sig-green-border) !important;
    }
    html.variant-signal[data-theme="light"] .border-\[\#39FF14\]\/20 {
      border-color: var(--sig-green-border) !important;
    }
    html.variant-signal[data-theme="light"] .border-\[\#39FF14\]\/30 {
      border-color: var(--sig-green-border-md) !important;
    }
    html.variant-signal[data-theme="light"] .border-\[\#39FF14\]\/5 {
      border-color: var(--sig-green-border) !important;
    }

    /* Shadows */
    html.variant-signal[data-theme="light"] .shadow-\[\#39FF14\]\/5 {
      --tw-shadow-color: rgba(22, 163, 74, 0.05);
    }

    /* Hover states */
    html.variant-signal[data-theme="light"] .hover\:text-\[\#39FF14\]:hover {
      color: var(--sig-green) !important;
    }
    html.variant-signal[data-theme="light"] .hover\:text-\[\#50ff3e\]:hover {
      color: var(--sig-green-hover) !important;
    }
    html.variant-signal[data-theme="light"] .hover\:text-\[\#c5c5c5\]:hover {
      color: #111827 !important;
    }
    html.variant-signal[data-theme="light"] .hover\:bg-\[\#39FF14\]\/10:hover {
      background-color: var(--sig-green-bg) !important;
    }
    html.variant-signal[data-theme="light"] .hover\:text-white:hover {
      color: #111827 !important;
    }
    html.variant-signal[data-theme="light"] .hover\:text-stone-200:hover,
    html.variant-signal[data-theme="light"] .hover\:text-stone-100:hover {
      color: #111827 !important;
    }
    html.variant-signal[data-theme="light"] .hover\:bg-stone-800:hover {
      background-color: rgba(0, 0, 0, 0.06) !important;
    }

    /* Gradient line at bottom of hero */
    html.variant-signal[data-theme="light"] .via-\[\#39FF14\]\/30 {
      --tw-gradient-via: var(--sig-green-border-md);
    }

    /* Ring focus color */
    html.variant-signal[data-theme="light"] .ring-\[\#39FF14\]\/50 {
      --tw-ring-color: var(--sig-green-border-md);
    }
    html.variant-signal[data-theme="light"] .focus-visible\:ring-\[\#39FF14\]\/50:focus-visible {
      --tw-ring-color: var(--sig-green-border-md);
    }
  </style>

