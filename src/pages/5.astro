    .font-geo { font-family: 'Fraunces', serif; }
    .font-mono-geo { font-family: 'Space Mono', monospace; }

    /* Geological palette */
    .bg-magma { background-color: #1a0a08; }
    .bg-basalt { background-color: #1a1210; }
    .bg-slate-deep { background-color: #1a2420; }
    .bg-sandstone { background-color: #f2e8d5; }
    .bg-bone { background-color: #faf5ec; }
    .bg-rust { background-color: #6B1D1D; }
    .text-gold { color: #C9A84C; }
    .text-rust { color: #a63d2b; }
    .text-sediment { color: #8a7a6a; }
    .border-gold { border-color: rgba(201, 168, 76, 0.2); }
    .bg-gold { background-color: #C9A84C; }

    /* Strata layers â€” horizontal bands */
    .strata-line {
      height: 1px;
      background: linear-gradient(90deg,
        transparent 0%,
        rgba(201,168,76,0.1) 10%,
        rgba(201,168,76,0.3) 30%,
        rgba(201,168,76,0.5) 50%,
        rgba(201,168,76,0.3) 70%,
        rgba(201,168,76,0.1) 90%,
        transparent 100%
      );
    }

    /* Gold veining texture */
    .gold-vein {
      background-image:
        linear-gradient(135deg, transparent 40%, rgba(201,168,76,0.06) 41%, rgba(201,168,76,0.06) 42%, transparent 43%),
        linear-gradient(225deg, transparent 55%, rgba(201,168,76,0.04) 56%, rgba(201,168,76,0.04) 57%, transparent 58%),
        linear-gradient(315deg, transparent 30%, rgba(201,168,76,0.05) 31%, rgba(201,168,76,0.05) 32%, transparent 33%);
    }

    /* Slow horizontal drift */
    @keyframes tectonicDrift {
      0%, 100% { transform: translateX(0); }
      50% { transform: translateX(20px); }
    }
    .tectonic-drift {
      animation: tectonicDrift 30s ease-in-out infinite;
    }
    .tectonic-drift-reverse {
      animation: tectonicDrift 25s ease-in-out infinite reverse;
    }

    /* Crack reveal */
    .crack-reveal {
      animation: crackOpen 1s cubic-bezier(0.22, 1, 0.36, 1) both;
    }
    @keyframes crackOpen {
      from { clip-path: inset(50% 0); opacity: 0; }
      to { clip-path: inset(0 0); opacity: 1; }
    }

    /* Fade up for this variant */
    .t-reveal {
      animation: tReveal 0.8s cubic-bezier(0.22, 1, 0.36, 1) both;
    }
    @keyframes tReveal {
      from { opacity: 0; transform: translateY(40px); }
      to { opacity: 1; transform: translateY(0); }
    }
    .t-d1 { animation-delay: 0.15s; }
    .t-d2 { animation-delay: 0.3s; }
    .t-d3 { animation-delay: 0.5s; }
    .t-d4 { animation-delay: 0.7s; }
    .t-d5 { animation-delay: 0.9s; }

    /* Sediment texture */
    .sediment-texture {
      background-image: url("data:image/svg+xml,%3Csvg width='100' height='100' viewBox='0 0 100 100' xmlns='http://www.w3.org/2000/svg'%3E%3Cfilter id='noise'%3E%3CfeTurbulence type='fractalNoise' baseFrequency='0.65' numOctaves='3' stitchTiles='stitch'/%3E%3C/filter%3E%3Crect width='100%25' height='100%25' filter='url(%23noise)' opacity='0.03'/%3E%3C/svg%3E");
    }
  </style>

