    .font-elegant { font-family: 'Cormorant Garamond', serif; }

    /* Cosmic palette */
    .bg-cosmos { background-color: #0B0D17; }
    .bg-deep-space { background-color: #060811; }
    .text-cyan-aurora { color: #00FFD1; }
    .text-magenta-aurora { color: #FF00AA; }
    .text-ghost { color: rgba(255,255,255,0.35); }

    /* Aurora gradient animation */
    @keyframes auroraFlow {
      0% {
        background-position: 0% 50%;
      }
      25% {
        background-position: 50% 100%;
      }
      50% {
        background-position: 100% 50%;
      }
      75% {
        background-position: 50% 0%;
      }
      100% {
        background-position: 0% 50%;
      }
    }

    .aurora-bg {
      background: linear-gradient(
        135deg,
        rgba(0, 255, 209, 0.08) 0%,
        rgba(255, 0, 170, 0.05) 25%,
        rgba(0, 255, 136, 0.06) 50%,
        rgba(100, 0, 255, 0.04) 75%,
        rgba(0, 255, 209, 0.08) 100%
      );
      background-size: 400% 400%;
      animation: auroraFlow 20s ease-in-out infinite;
    }

    /* Intense aurora for hero */
    .aurora-intense {
      background: linear-gradient(
        135deg,
        rgba(0, 255, 209, 0.15) 0%,
        rgba(255, 0, 170, 0.08) 20%,
        rgba(0, 255, 136, 0.12) 40%,
        rgba(100, 0, 255, 0.08) 60%,
        rgba(0, 255, 209, 0.15) 80%,
        rgba(255, 0, 170, 0.06) 100%
      );
      background-size: 400% 400%;
      animation: auroraFlow 15s ease-in-out infinite;
    }

    /* Glass panel */
    .glass {
      background: rgba(255, 255, 255, 0.03);
      backdrop-filter: blur(40px);
      -webkit-backdrop-filter: blur(40px);
      border: 1px solid rgba(255, 255, 255, 0.06);
    }
    .glass-strong {
      background: rgba(255, 255, 255, 0.06);
      backdrop-filter: blur(60px);
      -webkit-backdrop-filter: blur(60px);
      border: 1px solid rgba(255, 255, 255, 0.1);
    }
    .glass:hover, .glass-strong:hover {
      background: rgba(255, 255, 255, 0.08);
      border-color: rgba(0, 255, 209, 0.15);
    }

    /* Floating animation */
    @keyframes gentleFloat {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-10px); }
    }
    @keyframes gentleFloatReverse {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(8px); }
    }
    .float-gentle { animation: gentleFloat 8s ease-in-out infinite; }
    .float-reverse { animation: gentleFloatReverse 10s ease-in-out infinite; }

    /* Luminous orbs */
    .orb {
      border-radius: 50%;
      filter: blur(80px);
      position: absolute;
      pointer-events: none;
    }
    .orb-cyan {
      background: radial-gradient(circle, rgba(0,255,209,0.2), transparent 70%);
    }
    .orb-magenta {
      background: radial-gradient(circle, rgba(255,0,170,0.12), transparent 70%);
    }
    .orb-green {
      background: radial-gradient(circle, rgba(0,255,136,0.15), transparent 70%);
    }

    /* Spectral reveal */
    .a-reveal {
      animation: spectralReveal 1s cubic-bezier(0.22, 1, 0.36, 1) both;
    }
    @keyframes spectralReveal {
      from { opacity: 0; transform: translateY(30px) scale(0.98); filter: blur(4px); }
      to { opacity: 1; transform: translateY(0) scale(1); filter: blur(0); }
    }
    .a-d1 { animation-delay: 0.15s; }
    .a-d2 { animation-delay: 0.3s; }
    .a-d3 { animation-delay: 0.5s; }
    .a-d4 { animation-delay: 0.7s; }
    .a-d5 { animation-delay: 0.9s; }
    .a-d6 { animation-delay: 1.1s; }

    /* Shimmer line */
    @keyframes shimmer {
      from { transform: translateX(-100%); }
      to { transform: translateX(200%); }
    }
    .shimmer-line::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      width: 50%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(0,255,209,0.3), transparent);
      animation: shimmer 4s ease-in-out infinite;
    }

    /* Gradient text */
    .text-aurora-gradient {
      background: linear-gradient(135deg, #00FFD1, #00FF88, #00FFD1);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    /* Starfield */
    .starfield {
      background-image:
        radial-gradient(1px 1px at 10% 20%, rgba(255,255,255,0.3), transparent),
        radial-gradient(1px 1px at 30% 70%, rgba(255,255,255,0.2), transparent),
        radial-gradient(1px 1px at 50% 40%, rgba(255,255,255,0.15), transparent),
        radial-gradient(1px 1px at 70% 10%, rgba(255,255,255,0.25), transparent),
        radial-gradient(1px 1px at 90% 60%, rgba(255,255,255,0.2), transparent),
