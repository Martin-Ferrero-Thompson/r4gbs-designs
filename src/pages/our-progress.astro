---
import PageLayout from '../layouts/PageLayout.astro';
import { t, defaultLang } from '../i18n/index';
---
<PageLayout
  title={t(defaultLang, 'progress.pageTitle')}
  heroTitle={t(defaultLang, 'progress.heroTitle')}
  heroSubtitle={t(defaultLang, 'progress.heroSubtitle')}
  heroTitleKey="progress.heroTitle"
  heroSubtitleKey="progress.heroSubtitle"
>
  <section>
    <div class="max-w-[1400px] mx-auto px-6 lg:px-10 py-24 lg:py-32">

      <!-- Route Map -->
      <div class="bg-stone-900 rounded-2xl p-8 lg:p-12 border border-stone-800 mb-16">
        <h2 class="font-display text-2xl lg:text-3xl font-bold text-stone-100 mb-6" data-i18n="progress.mapTitle">{t(defaultLang, 'progress.mapTitle')}</h2>
        <p class="text-stone-400 font-body mb-8" data-i18n="progress.mapDesc">{t(defaultLang, 'progress.mapDesc')}</p>
        <div class="aspect-video bg-stone-800 rounded-xl flex items-center justify-center border border-stone-700">
          <div class="text-center">
            <svg class="w-16 h-16 text-stone-600 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1">
              <path d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
            </svg>
            <p class="text-stone-500 font-body text-sm" data-i18n="progress.mapPlaceholder">{t(defaultLang, 'progress.mapPlaceholder')}</p>
          </div>
        </div>
      </div>

      <!-- By the Numbers -->
      <h2 class="font-display text-2xl lg:text-3xl font-bold text-stone-100 mb-8" data-i18n="progress.byTheNumbers">{t(defaultLang, 'progress.byTheNumbers')}</h2>
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-4 mb-16">
        <div class="bg-stone-900 rounded-xl p-6 border border-stone-800">
          <p class="text-stone-500 text-xs font-body uppercase tracking-wider" data-i18n="progress.daysCompleted">{t(defaultLang, 'progress.daysCompleted')}</p>
          <div class="flex items-baseline gap-2 mt-2">
            <span class="font-display text-3xl font-bold text-stone-100">0</span>
            <span class="text-stone-600 font-body">/ 12</span>
          </div>
          <div class="mt-3 h-1.5 bg-stone-800 rounded-full overflow-hidden">
            <div class="h-full bg-amber-500 rounded-full transition-all duration-1000" style="width: 0%;"></div>
          </div>
        </div>
        <div class="bg-stone-900 rounded-xl p-6 border border-stone-800">
          <p class="text-stone-500 text-xs font-body uppercase tracking-wider" data-i18n="progress.distanceRidden">{t(defaultLang, 'progress.distanceRidden')}</p>
          <div class="flex items-baseline gap-2 mt-2">
            <span class="font-display text-3xl font-bold text-stone-100">0</span>
            <span class="text-stone-600 font-body">/ 1,000 km</span>
          </div>
          <div class="mt-3 h-1.5 bg-stone-800 rounded-full overflow-hidden">
            <div class="h-full bg-amber-500 rounded-full transition-all duration-1000" style="width: 0%;"></div>
          </div>
        </div>
        <div class="bg-stone-900 rounded-xl p-6 border border-stone-800">
          <p class="text-stone-500 text-xs font-body uppercase tracking-wider" data-i18n="progress.metresClimbed">{t(defaultLang, 'progress.metresClimbed')}</p>
          <div class="flex items-baseline gap-2 mt-2">
            <span class="font-display text-3xl font-bold text-stone-100">0</span>
            <span class="text-stone-600 font-body">/ 22,900 m</span>
          </div>
          <div class="mt-3 h-1.5 bg-stone-800 rounded-full overflow-hidden">
            <div class="h-full bg-amber-500 rounded-full transition-all duration-1000" style="width: 0%;"></div>
          </div>
        </div>
        <div class="bg-stone-900 rounded-xl p-6 border border-stone-800">
          <p class="text-stone-500 text-xs font-body uppercase tracking-wider" data-i18n="progress.summitsConquered">{t(defaultLang, 'progress.summitsConquered')}</p>
          <div class="flex items-baseline gap-2 mt-2">
            <span class="font-display text-3xl font-bold text-stone-100">0</span>
            <span class="text-stone-600 font-body">/ 20</span>
          </div>
          <div class="mt-3 h-1.5 bg-stone-800 rounded-full overflow-hidden">
            <div class="h-full bg-amber-500 rounded-full transition-all duration-1000" style="width: 0%;"></div>
          </div>
        </div>
      </div>

      <!-- Fundraising Progress -->
      <h2 class="font-display text-2xl lg:text-3xl font-bold text-stone-100 mb-8" data-i18n="progress.fundraisingTitle">{t(defaultLang, 'progress.fundraisingTitle')}</h2>
      <div class="grid sm:grid-cols-2 gap-6">
        <div class="bg-stone-900 rounded-2xl p-8 border border-stone-800">
          <p class="text-stone-400 font-body text-sm" data-i18n="progress.ukCharity">{t(defaultLang, 'progress.ukCharity')}</p>
          <p class="font-display text-4xl font-bold text-stone-100 mt-2">£0.00</p>
          <p class="text-stone-500 text-sm font-body mt-1">Target: £10,000.00</p>
          <div class="mt-4 h-2 bg-stone-800 rounded-full overflow-hidden">
            <div class="h-full bg-amber-500 rounded-full" style="width: 0%;"></div>
          </div>
          <a href="/donate" class="inline-flex items-center gap-2 text-amber-400 font-body text-sm mt-4 hover:text-amber-300 transition-colors" data-i18n="progress.donateNow">{t(defaultLang, 'progress.donateNow')}</a>
        </div>
        <div class="bg-stone-900 rounded-2xl p-8 border border-stone-800">
          <p class="text-stone-400 font-body text-sm" data-i18n="progress.esCharity">{t(defaultLang, 'progress.esCharity')}</p>
          <p class="font-display text-4xl font-bold text-stone-100 mt-2">€0.00</p>
          <p class="text-stone-500 text-sm font-body mt-1">Target: €10,000.00</p>
          <div class="mt-4 h-2 bg-stone-800 rounded-full overflow-hidden">
            <div class="h-full bg-amber-500 rounded-full" style="width: 0%;"></div>
          </div>
          <a href="/donate" class="inline-flex items-center gap-2 text-amber-400 font-body text-sm mt-4 hover:text-amber-300 transition-colors" data-i18n="progress.donateNow">{t(defaultLang, 'progress.donateNow')}</a>
        </div>
      </div>
    </div>
  </section>
</PageLayout>
